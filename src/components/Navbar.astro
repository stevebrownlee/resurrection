---
// src/components/Navbar.astro
const navItems = [
  { name: 'Home', url: '/' },
  { name: 'Services', url: '/services' },
  { name: 'Gallery', url: '/gallery' },
  { name: 'Testimonials', url: '/testimonials' },
  { name: 'Contact', url: '/contact' },
];
---

<nav>
  <div class="logo">
    <a href="/">Hardwood Resurrection</a>
  </div>
  <button class="mobile-menu-toggle" aria-label="Toggle menu">
    â˜°
  </button>
  <ul class="nav-links">
    {navItems.map((item) => (
      <li><a href={item.url}>{item.name}</a></li>
    ))}
  </ul>
</nav>

<style>
  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background-color: white;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  .logo a {
    color: rgb(37, 35, 35);
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: bold;
  }

  .nav-links {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links li {
    margin-left: 1.5rem;
  }

  .nav-links a {
    color: rgb(31, 30, 30);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .nav-links a:hover {
    color: #ffd700;
  }

  .mobile-menu-toggle {
    display: none;
    background: none;
    border: none;
    color: rgb(37, 36, 36);
    font-size: 1.5rem;
    cursor: pointer;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
      flex-direction: column;
      position: absolute;
      top: 60px;
      left: 0;
      right: 0;
      background-color: #333;
      padding: 1rem;
    }

    .nav-links.active {
      display: flex;
    }

    .nav-links li {
      margin: 0.5rem 0;
    }

    .mobile-menu-toggle {
      display: block;
    }
  }
</style>

<script>
  const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
  const navLinks = document.querySelector('.nav-links');

  mobileMenuToggle.addEventListener('click', () => {
    navLinks.classList.toggle('active');
  });
</script>